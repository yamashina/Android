<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jp.emitteeer.countdowntimetable"
      android:versionCode="2"
      android:versionName="1.0.1">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    	<!-- 時刻表一覧画面 -->
        <activity android:name=".TimeTableList"
                  android:label="@string/app_name"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    	<!-- カウントダウン画面 -->
        <activity android:name=".CountDown"
                  android:label="@string/app_name"
                  >
        </activity>

    	<!-- 設定画面 -->
        <activity android:name=".Preference"
                  android:label="@string/app_name"
                  >
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="4" />
	<!-- パーミッション設定 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- SD書き込み -->

</manifest> 